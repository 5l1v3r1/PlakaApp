<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/yazi"
            android:layout_marginBottom="10dp"
            android:text="CİNS" />

        <EditText
            android:id="@+id/cinsText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/admin_et_background"
            android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/cinsListView"
            android:layout_width="220dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/et_rounded_corner"
            android:dividerHeight="2dp"
            android:divider="@color/yazi"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130dp"
            android:paddingLeft="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/cins_bt_ekle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/btn_rounded_corner"
                android:layout_marginBottom="20dp"
                android:text="Ekle" />

            <Button
                android:id="@+id/cins_bt_guncelle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/btn_rounded_corner"
                android:layout_marginBottom="20dp"
                android:text="Güncelle" />

            <Button
                android:id="@+id/cins_bt_sil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/btn_rounded_corner"
                android:layout_marginBottom="20dp"
                android:text="Sil" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>