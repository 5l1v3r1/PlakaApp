<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="2dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/yazi"
            android:text="SORU"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/soruText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/et_rounded_corner"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:drawableLeft="@drawable/ic_security_black_24dp"
            android:drawablePadding="10dp"
            android:hint="@string/guvenlik_sorusu"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/soruListView"
            android:layout_height="match_parent"
            android:layout_width="220dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/et_rounded_corner"
            android:dividerHeight="2dp"
            android:divider="@color/yazi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/soru_bt_ekle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/btn_rounded_corner"
                android:layout_marginBottom="20dp"
                android:text="Ekle"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/soru_bt_guncelle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/btn_rounded_corner"
                android:layout_marginBottom="20dp"
                android:text="GÃ¼ncelle"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/soru_bt_sil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/btn_rounded_corner"
                android:layout_marginBottom="20dp"
                android:text="Sil"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>